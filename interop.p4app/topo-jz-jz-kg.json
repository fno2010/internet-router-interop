{
  "switches": {
    "sw1": {
      "class": "example.maclearning.MacLearningSwitch",
      "prog": "example/l2switch.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "ctrl_port": 1,
        "start_wait": 0.5
      }
    },
    "sw2": {
      "class": "jensen.pwospf.PWOSPFRouter",
      "prog": "/p4app/jensen/pwospf.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "ctrl_port": 1,
        "start_wait": 0.5,
        "timeout": 20
      },
      "router_id": "10.0.0.1",
      "lsunit": 3,
      "pcap_dump": "/tmp/p4app-logs",
      "startup_config": {
        "interfaces": {
          "2": {
            "ip": "10.0.0.1/24"
          },
          "3": {
            "ip": "10.0.3.2/24"
          }
        }
      }
    },
    "sw3": {
      "class": "jensen.pwospf.PWOSPFRouter",
      "prog": "/p4app/jensen/pwospf.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "ctrl_port": 1,
        "start_wait": 0.5,
        "timeout": 20
      },
      "router_id": "10.0.1.1",
      "lsunit": 3,
      "pcap_dump": "/tmp/p4app-logs",
      "startup_config": {
        "interfaces": {
          "2": {
            "ip": "10.0.1.1/24"
          },
          "3": {
            "ip": "10.0.2.1/24"
          },
          "4": {
            "ip": "10.0.3.1/24"
          },
          "5": {
            "ip": "10.0.5.1/24"
          }
        }
      }
    },
    "sw4": {
      "class": "kerim.kerim.KerimSwitch",
      "prog": "kerim/router.p4",
      "enable_ctrl": true,
      "pcap_dump": "/tmp/p4app-logs",
      "ctrl_args": {
        "links": {
          "1": "10.10.0.4/16",
          "2": "10.0.4.1/24",
          "3": "10.0.5.2/24"
        }
      }
    }
  },
  "hosts": {
    "h1": { "ip": "10.0.0.101/24", "defaultRoute": "dev eth0 via 10.0.0.1" },
    "h2": { "ip": "10.0.1.101/24", "defaultRoute": "dev eth0 via 10.0.1.1" },
    "h3": { "ip": "10.0.2.101/24", "defaultRoute": "dev eth0 via 10.0.2.1" },
    "h4": { "ip": "10.0.4.101/24", "defaultRoute": "dev eth0 via 10.0.4.1" }
  },
  "links": [
    [ "h1", "sw1" ],
    [ "sw1", "sw2" ],
    [ "h2", "sw3" ],
    [ "h3", "sw3" ],
    [ "sw2", "sw3" ],
    [ "h4", "sw4" ],
    [ "sw4", "sw3" ]
  ]
}