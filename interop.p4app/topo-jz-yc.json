{
  "switches": {
    "sw1": {
      "class": "example.maclearning.MacLearningSwitch",
      "prog": "example/l2switch.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "ctrl_port": 1,
        "start_wait": 0.5
      }
    },
    "sw2": {
      "class": "jensen.pwospf.PWOSPFRouter",
      "prog": "/p4app/jensen/pwospf.p4",
      "enable_ctrl": true,
      "ctrl_args": {
        "ctrl_port": 1,
        "start_wait": 0.5,
        "timeout": 20
      },
      "router_id": "10.0.0.1",
      "lsunit": 3,
      "pcap_dump": "/tmp/p4app-logs",
      "startup_config": {
        "interfaces": {
          "2": {
            "ip": "10.0.0.1/24"
          },
          "3": {
            "ip": "10.0.3.2/24"
          }
        }
      }
    },
    "sw3": {
      "class": "lukexuan.router.Router",
      "prog": "lukexuan/router.p4",
      "enable_ctrl": true,
      "pcap_dump": "/tmp/p4app-logs",
      "ctrl_args": {
        "2": {
          "subnet": "10.0.1.0/24",
          "ipaddr": "10.0.1.1",
          "helloint": 1
        },
        "3": {
          "subnet": "10.0.2.0/24",
          "ipaddr": "10.0.2.1",
          "helloint": 1
        },
        "4": {
          "subnet": "10.0.3.0/24",
          "ipaddr": "10.0.3.1",
          "helloint": 1
        }
      }
    }
  },
  "hosts": {
    "h1": { "ip": "10.0.0.101/24", "defaultRoute": "dev eth0 via 10.0.0.1" },
    "h2": { "ip": "10.0.1.101/24", "defaultRoute": "dev eth0 via 10.0.1.1" },
    "h3": { "ip": "10.0.2.101/24", "defaultRoute": "dev eth0 via 10.0.2.1" }
  },
  "links": [
    [ "h1", "sw1" ],
    [ "sw1", "sw2" ],
    [ "h2", "sw3" ],
    [ "h3", "sw3" ],
    [ "sw2", "sw3" ]
  ]
}